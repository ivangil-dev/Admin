<section class="gh-canvas js-settings-content" {{scroll-top}}>
    <GhCanvasHeader class="gh-canvas-header">
        <h2 class="gh-whats-new-heading">{{svg-jar "gift"}} ¿Qué hay de nuevo?</h2>
        <div class="gh-about-header-actions">
            <a class="gh-btn gh-btn-outline" href="https://ghost.org/docs/" target="_blank" rel="noopener noreferrer"><span>Documentación</span></a>
            <a class="gh-btn gh-btn-outline" href="https://forum.ghost.org/" target="_blank" rel="noopener noreferrer"><span>Comunidad Ghost</span></a>
            <a class="gh-btn gh-btn-black" href="mailto:soporte@ivangil.es" target="_blank" rel="noopener noreferrer"><span>Soporte técnico</span></a>
        </div>
    </GhCanvasHeader>
    <section class="view-container">
        <div class="gh-about-container">
            <section class="gh-whats-new gh-about-box" {{did-insert (perform this.whatsNew.updateLastSeen)}}>
                {{#each this.whatsNew.entries as |entry|}}
                    <a href="{{entry.url}}" class="gh-wn-entry" {{scroll-to shouldScroll=(eq entry.slug this.entry)}}>
                        <h4>{{moment-format entry.published_at "DD MMMM YYYY"}}</h4>
                        <h1>{{entry.title}}</h1>
                        {{#if entry.feature_image}}
                            <img class="mb5" src={{entry.feature_image}}>
                        {{/if}}
                        <div class="gh-wn-content">
                        {{#if entry.custom_excerpt}}
                            <p>{{entry.custom_excerpt}}</p>
                            <a href={{entry.url}} class="dib fw6 mb6" target="_blank" rel="noopener noreferrer">Leer la publicación completa →</a>
                        {{else}}
                            {{{entry.html}}}
                        {{/if}}
                        </div>
                    </a>
                {{/each}}
                <a class="green" href="https://ghost.org/changelog" target="_blank" rel="noopener noreferrer">Ver todas las actualizaciones &rarr;</a>
            </section>

            <div class="gh-about-content-actions">
                <a class="gh-btn gh-btn-outline" href="https://ghost.org/docs/" target="_blank" rel="noopener noreferrer"><span>User documentation</span></a>
                <a class="gh-btn gh-btn-outline" href="https://forum.ghost.org/" target="_blank" rel="noopener noreferrer"><span>Get help with Ghost</span></a>
                <a class="gh-btn gh-btn-black" href="mailto:soporte@ivangil.es" target="_blank" rel="noopener noreferrer"><span>Soporte técnico</span></a>
            </div>

            <section class="gh-env-details gh-about-box grey">
                <div class="gh-about-logo">
                    {{svg-jar "ghost-logo-orb" alt="Ghost"}}
                </div>

                {{#if this.upgradeStatus.message}}
                    <section class="gh-upgrade-notification">
                        <p>
                            <strong>Actualización disponible!</strong> {{this.upgradeStatus.message}}
                        </p>
                    </section>
                {{/if}}

                <ul class="gh-env-list">
                    <li><strong>Versión:</strong> {{this.config.version}}</li>
                    {{#if this.showSystemInfo}}
                    <li><strong>Entorno:</strong> <span class="ttc">{{this.config.environment}}</span></li>
                    <li><strong>Programador asignado:</strong> Ivan Gil</li>
                    <li class="gh-env-list-database-type"><strong>Database:</strong> {{this.config.database}}</li>
                    <li><strong>Email:</strong> {{#if this.config.mail}}{{this.config.mail}}{{else}}Native{{/if}}</li>
                    {{/if}}
                    {{#if (enable-developer-experiments)}}
                    <li><strong>Experimentos de desarrollador:</strong> <span class="gh-badge">Activados</span></li>
                    {{/if}}
                </ul>

                {{#if (and this.showSystemInfo this.showDatabaseWarning)}}
                    <section class="gh-upgrade-notification">
                        <p>
                            <strong>Alerta:</strong> MySQL 8 será la base de datos necesaria en la próxima versión principal de Ghost. Asegúrate de que tu base de datos esté actualizada para garantizar la compatibilidad de los avances.
                        </p>
                    </section>
                {{/if}}

                <footer class="gh-copyright-info">
                    Copyright &copy; 2013 &ndash; {{this.copyrightYear}} Ghost Foundation, released under the <a href="https://github.com/TryGhost/Ghost/blob/master/LICENSE" target="_blank" rel="noopener noreferrer">MIT license</a>. <a href="https://ghost.org/" target="_blank" rel="noopener noreferrer">Ghost</a> is a registered trademark of <a href="https://ghost.org/trademark/" target="_blank" rel="noopener noreferrer">Ghost Foundation Ltd</a>.
                </footer>
            </section>
        </div>
    </section>
</section>
